<h3>Subject</h3>

<p>Name: <%= @subject.name %></p>

<p>Courses: <% @subject.courses.each do |c| %>
    <li>
        Number: <%= c.number %>
        Description: <%= c.description %>
        <%= button_to "View Course", courses_show_path(c.id), :method => :get %>
    </li>
    <% end %>
</p>
<%= button_to "Add Course", courses_new_path, :method => :get %>
<% if current_user.admin %>
    <%= button_to "Delete Subject", subjects_delete_path(@subject), :method => :delete %>
<% end %>
